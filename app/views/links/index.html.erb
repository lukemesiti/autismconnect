<div class="form-inner">
  <h1 class="center">All links</h1>
  <table class="table-responsive">
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Link</th>
          <th>Creator</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @links.each do |link| %>
        <tr>
          <td><%= link.name %></td>
          <td><%= link_to link.url, link.url, :target => "blank" %></td>
          <td><%= link.user %></td>
          <% if policy(link).edit? %>
          <td><%= link_to 'Edit', edit_link_path(link),:class => "btn btn-default btn-sm btn-block" %></td>
          <% end %>
          <% if policy(link).destroy? %>
          <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-default btn-sm btn-block" %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </table>
  <br>

  <% if policy(@links).create? %>
  <%= link_to 'New Link', new_link_path, :class => "btn btn-primary btn-sm" %>
  <% end %>

</div>