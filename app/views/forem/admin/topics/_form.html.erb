<%= simple_form_for [forem, :admin, @topic] do |f| %>
<div class="form-group">
  <%= f.label :subject%>
  <%= f.text_field :subject, :class => "form-control" %>
</div>
<div class="form-group">
  <%= f.association :forum , :label => "Forum" %>
</div>
<div class="form-group">
  <%= f.label :locked %>
  <%= f.check_box :locked, :class => "checkbox-inline" %>
  </div>
  <div class="form-group">
  <%= f.label :pinned %>
  <%= f.check_box :pinned %>
</div>
  <div class="form-group">
  <%= f.label :hidden %>
  <%= f.check_box :hidden %>
</div>
<div class="form-group">
  <%= f.submit :class => "btn btn-primary" %>
</div>
<% end %>
